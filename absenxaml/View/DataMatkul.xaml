<Window x:Class="absenxaml.View.DataMatkul"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:absenxaml.View"
        mc:Ignorable="d"
        Title="DataMatkul" Height="450" Width="800">

    <!-- Add a StackPanel or any other container for layout -->
    <Grid>
        <DataGrid x:Name="dgMatkul" AutoGenerateColumns="False" Margin="0,0,400,4"
                  CellEditEnding="onCellValueChanged" CanUserAddRows="True"
                  CanUserDeleteRows="True" CanUserSortColumns="True"
> 
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" IsReadOnly="True" Width="auto" />
                <DataGridTextColumn Header="Nama" Binding="{Binding Nama}" Width="auto" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Click="btnOpenAddForm_click" Content="Tambah Matkul" Margin="486,192,214,181"/>
        <Button Click="btnDelMk_click" Content="Hapus Matkul" Margin="625,192,75,181"/>
    </Grid>
</Window>
