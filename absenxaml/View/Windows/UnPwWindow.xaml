<Window x:Class="absenxaml.View.Windows.UnPwWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:absenxaml.View.Windows"
        mc:Ignorable="d"
        Title="UnPwWindow" Height="250" Width="400">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Center" Margin="0,30,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.699,0.821"/>
        <TextBox x:Name="tbUsername" HorizontalAlignment="Center" Margin="0,61,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Label Content="Password" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="0.699,0.821" Margin="0,98,0,0"/>
        <TextBox x:Name="tbPassword" HorizontalAlignment="Center" Margin="0,129,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Button x:Name="btnSimpan" Content="Simpan" HorizontalAlignment="Center" Margin="0,173,0,0" VerticalAlignment="Top" FontSize="16" Padding="5,5,5,5" Click="btnSimpan_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="464,73,0,0" VerticalAlignment="Top" Width="0"/>

    </Grid>
</Window>
