<Window x:Class="absenxaml.View.Windows.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:absenxaml.View.Windows"
      mc:Ignorable="d" 
     Title="LoginPage" Height="350" Width="500">

    <Grid Background="White">
        <TextBox x:Name="tbUsername" Margin="198,103,0,0" TextWrapping="Wrap" FontSize="16" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <Label Content="Username" Margin="199,69,0,0" FontSize="16" RenderTransformOrigin="-0.275,1.471" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="81"/>
        <Button x:Name="btnLogin" Content="Button" Margin="230,239,0,0" FontSize="13" ForceCursor="True" Padding="5,5,5,5" Click="btnLogin_Click" RenderTransformOrigin="0.486,-0.024" Height="29" VerticalAlignment="Top" HorizontalAlignment="Left" Width="51"/>
        <PasswordBox x:Name="pbPassword" HorizontalAlignment="Left" Width="120" FontSize="16" RenderTransformOrigin="0.417,0.715" Margin="196,168,0,0" Height="23" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="200,133,0,0" VerticalAlignment="Top" FontSize="16" RenderTransformOrigin="-0.275,1.471"/>

    </Grid>
</Window>
